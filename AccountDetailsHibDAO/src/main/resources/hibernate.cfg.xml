<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- DB Connection properties -->

		<!-- ORACLE Configurations -->
		<property name="connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="connection.username">acoountproject</property>
		<property name="connection.password">acoountproject</property>
		<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.jdbc.use_get_generated_keys">true</property>

		<!-- Hibernate properties -->
		<property name="hbm2ddl.auto">none</property>
		<property name="show_sql">true</property>

		<!-- ORACLE Hibernate properties -->
		<property name="dialect">org.hibernate.dialect.Oracle9Dialect</property>

		<mapping class="com.app.accounts.entity.LoginDetails"/>
		<mapping class="com.app.accounts.entity.AccountDetails"/>
		<mapping class="com.app.accounts.entity.AccountTrasactionDetails"/>
		<mapping class="com.app.accounts.entity.AccountProfile"/>
		<mapping class="com.app.accounts.entity.AccountAddressDetails"/>
	</session-factory>
</hibernate-configuration>